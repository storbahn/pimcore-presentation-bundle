{% extends '@Presentation/Areas/fragmentWrap.html.twig' %}

{% set brickName='textarea' %}

{% block brick %}
    {% if editmode %}
        {{ pimcore_textarea('text', {
            'placeholder': 'Enter your text, NL will transformed to <br>',
            'height': 150
        }) }}
    {% else %}
        {{ pimcore_textarea('text').getData() | nl2br }}
    {% endif %}
{% endblock %}
